-- Expression evaluator

import List;
import State;

public fun evalBinOp (op, lhs, rhs) {
  case op of
    "+" -> lhs + rhs
  | "-" -> lhs - rhs
  | "*" -> lhs * rhs
  | "/" -> lhs / rhs
  | "%" -> lhs % rhs
  | "<" -> lhs < rhs
  | ">" -> lhs > rhs
  | "<=" -> lhs <= rhs
  | ">=" -> lhs >= rhs
  | "==" -> lhs == rhs
  | "!=" -> lhs != rhs
  | "&&" -> lhs && rhs
  | "!!" -> lhs !! rhs
  esac
}

-- The evaluator itself: takes a state and an expression,
-- returns integer value
--
-- An expression is represented by a data structure of the following shape:
--
-- expr = Var   (string)             |
--        Const (int)                |
--        Binop (string, expr, expr)

public fun evalExpr (env, expr) {
  case expr of
    Var (name) -> env (name)
  | Const (value) -> value
  | Binop (op, lhsExpr, rhsExpr) ->
      var lhs = evalExpr (env, lhsExpr);
      var rhs = evalExpr (env, rhsExpr);
      evalBinOp (op, lhs, rhs) 
  esac
}